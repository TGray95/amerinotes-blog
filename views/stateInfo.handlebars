<div >
  <div class='card-header'>
    <div class="dish-card">
  <div class="card-header">
    {{state.state_name}}
  </div>
  <div class="card-body">
    <p>
      Capital:
      {{state.capital}}
      <br>
      Size:
      {{state.size}}
    </p>
  </div>
</div>
  </div>
  <div>
{{#if state.posts}}
<h2>
  Posts about this State
</h2>
{{/if}}
  {{#each state.posts}}
  <div class="bg-light">
    <div class='post-body'>
      <p>
        {{post_text}}
      </p>
    </div>
    <div class='post-author'>
      <p>
        Posted by:
        {{user.username}}
      </p>
    </div>
  </div>
  {{/each}}
  {{#if loggedIn}}
  <div class="d-flex flex-column align-items-center">
    <textarea oninput="auto_grow(this)" maxlength="300" placeholder="Enter post text (max 300 characters)" id="new-post"></textarea>
      <button class="btn btn-outline-primary btn-sm" id="post-button">
        <p>Create new post</p>
      </button>
  </div>
  {{else}}
  <a href="/login">Log in</a><span> or </span><a href="/signup">Sign up</a><span> to create posts!</span>
  {{/if}}
  
  </div>
  {{#if loggedIn}}
  <script src="/js/post.js"></script>
  {{/if}}